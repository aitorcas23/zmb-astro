---
import BookMark from "./BookMark.astro";
import CardEffect from "./CardEffect.astro";
import Media from "./icons/Media.astro";

interface Props {
	title: string;
	description?: string;
	image?: string;
	alt?: string;
	link: string;
}

const { title, description, image, alt, link } = Astro.props;
---

<CardEffect href={link} extraClass={"relative max-w-sm"}>
	<BookMark color="fill-green-700">
		<Media />
	</BookMark>
	<img
		src={image || "/images/Logo_medium_MusikaBanda_black.png"}
		alt={alt || title}
		class="aspect-video rounded-t-lg object-cover"
	/>
	<div class="p-4">
		<h5 class="mb-2 text-xl font-bold tracking-tight text-gray-900">{title}</h5>

		<p class="line-clamp-3">{description}</p>
	</div>
</CardEffect>
